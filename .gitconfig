[user]
  name = Filip Krikava
  email = krikava@gmail.com

[core]
  autocrlf = input
  ignorecase = false

[color]
  ui = true
  diff = true

[alias]
  lg = log --graph --all --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ah)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
  vim = !"vim '+Git' '+only'"

[merge]
  tool = vimdiff

[mergetool]
  keepBackup = false

[mergetool "p4merge"]
  cmd = p4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
  keepTemporaries = false
  trustExitCode = false

[mergetool "vimdiff"]
  cmd = vim '+Gvdiffsplit!' "$MERGED"

[difftool "p4merge"]
  cmd = p4merge "$LOCAL" "$REMOTE"
  path =

[push]
  default = simple

[credential]
  helper = cache --timeout=36000

[pull]
  rebase = true

[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta

[interactive]
  diffFilter = delta --color-only --features=interactive

[delta]
  features = decorations

[delta "interactive"]
  keep-plus-minus-markers = false

[delta "decorations"]
  commit-decoration-style = blue ol
  commit-style = raw
  file-style = omit
  hunk-header-decoration-style = blue box
  hunk-header-file-style = red
  hunk-header-line-number-style = "#067a00"
  hunk-header-style = file line-number syntax
