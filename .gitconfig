[user]
  name = Filip Krikava
  email = krikava@gmail.com

[core]
  autocrlf = input
  ignorecase = false

[color]
  ui = true
  diff = true

[alias]
  lg = log --graph --all --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ah)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
  vim = !"vim '+Neogit' '+only'"

[merge]
  tool = vimdiff

[mergetool]
  keepBackup = false

[mergetool "p4merge"]
  cmd = p4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
  keepTemporaries = false
  trustExitCode = false

[difftool "p4merge"]
  cmd = p4merge \"$LOCAL\" \"$REMOTE\"
  path =

[push]
  default = simple

[credential]
  helper = cache --timeout=36000

[pull]
  rebase = true

