#
# wm independent hotkeys
#

# tmux
super + Return
  ~/bin/x-terminal-tmux.sh

# terminal
super + shift + Return
  ~/bin/x-terminal.sh

# dropdown terminal
super + grave
   ~/Projects/mde/dropdown/target/debug/dropdown /usr/local/bin/st -t dropdown -g 142x42 tmux new-session -A -s dropdown

super + backslash
   ~/Projects/mde/dropdown/target/debug/dropdown /usr/local/bin/st -t notes -g 142x42 tmux new-session -A -s notes nvim '+WikiFzfPages'

super + bar
   ~/Projects/mde/dropdown/target/debug/dropdown /usr/local/bin/st -t journal -g 142x42 tmux new-session -A -s journal nvim '+WikiJournal'

# files
super + h
  nautilus

# application menu
super + d
  ~/bin/x-apps-menu.sh

# clipboard menu
super + c
  ~/bin/x-clipboard-menu.sh

# network menu
super + n
  networkmanager_dmenu

# bluetooth menu
super + b
  rofi-bluetooth

# password menu
super + p
  ~/bin/x-pass-menu.sh

# window menu
super + slash
  ~/bin/x-window-menu.sh

# SSH menu
super + s
  ~/bin/x-ssh-menu.sh

# qualc
super + colon
  ~/bin/x-qalc.sh

# display
super + m
  ~/bin/x-display-menu.sh

# TODO list of shortcuts

# power menu
super + ctrl + x
  ~/bin/x-power-menu.sh

# reload sxhkd configuration
super + Escape
  pkill -USR1 -x sxhkd

# media keys
super + F11
  playerctl play-pause

super + F10
  playerctl next

super + F9
  playerctl previous

# media keys
XF86AudioPlay
  playerctl play-pause

XF86AudioNext
  playerctl next

XF86AudioPrev
  playerctl previous

# volume keys
XF86AudioRaiseVolume
  pactl set-sink-volume 0 +5%

XF86AudioLowerVolume
  pactl set-sink-volume 0 -5%

XF86AudioMute
  pactl set-sink-mute 0 toggle

# Screen brightness controls
XF86MonBrightnessUp
	xbacklight -inc 10 && notify-send 'brightness up' || notify-send 'trouble invoking xbacklight'

XF86MonBrightnessDown
	xbacklight -dec 10 && notify-send 'brightness down' || notify-send 'trouble invoking xbacklight'

# #
# # bspwm hotkeys
# #

# # close window
# super + q
#   bspc node -c

# # kill window
# super + ctrl + k
#   bspc node -k

# # xkill
# super + ctrl + shift + k
#   xkill

# # alternate between layouts
# super + space
#   bspc desktop -l next

# # send the newest marked node to the newest preselected node
# super + shift + y
#   bspc node newest.marked.local -n newest.!automatic.local

# # swap the current node and the biggest node
# super + shift + g
#   bspc node -s biggest

# #
# # state/flags
# #

# # toggle tiling
# super + shift + t
#   bspc node -t '~tiled'
# # toggle floating
# super + shift + space
#   bspc node -t '~floating'
# # toggle fullscreen
# super + shift + f
#   bspc node -t '~fullscreen'

# # toggle stickiness
# super + shift + s
#   bspc node -g '~sticky'

# # move / swap
# super + {_,shift + }{Left,Down,Up,Right}
#   bspc node -{f,s} {west,south,north,east}

# # focus the older or newer node in the focus history
# super + {o,i}
#   bspc wm -h off; \
#   bspc node {older,newer} -f; \
#   bspc wm -h on

# # focus or send to the given desktop
# super + {_,shift + }{1-9,0}
#   bspc {desktop -f,node -d} '^{1-9,10}'

# # expand a window by moving one of its side outward
# super + alt + {h,j,k,l}
#   bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# # contract a window by moving one of its side inward
# super + alt + shift + {h,j,k,l}
#   bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# # move a floating window
# super + alt + {Left,Down,Up,Right}
#   bspc node -v {-20 0,0 20,0 -20,20 0}
