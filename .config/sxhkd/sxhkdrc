#
# wm independent hotkeys
#

# tmux
super + Return
  ~/bin/x-terminal-tmux.sh

# terminal
super + shift + Return
  ~/bin/x-terminal.sh

# dropdown terminal
super + grave
   ~/Projects/mde/dropdown/target/debug/dropdown /usr/local/bin/st -t dropdown -g 142x42 tmux new-session -A -s dropdown

super + backslash
   ~/Projects/mde/dropdown/target/debug/dropdown /usr/local/bin/st -t notes -g 142x42 tmux new-session -A -s notes nvim '+WikiFzfPages'

super + bar
   ~/Projects/mde/dropdown/target/debug/dropdown /usr/local/bin/st -t journal -g 142x42 tmux new-session -A -s journal nvim '+WikiJournal'

# files
super + h
  nautilus

# application menu
super + d
  ~/bin/x-apps-menu.sh

# clipboard menu
super + c
  ~/bin/x-clipboard-menu.sh

# network menu
super + n
  networkmanager_dmenu

# bluetooth menu
super + b
  rofi-bluetooth

# password menu
super + p
  ~/bin/x-pass-menu.sh

# window menu
super + slash
  ~/bin/x-window-menu.sh

# SSH menu
super + s
  ~/bin/x-ssh-menu.sh

# qualc
super + colon
  ~/bin/x-qalc.sh

# display
super + m
  ~/bin/x-display-menu.sh

# TODO list of shortcuts

# power menu
super + ctrl + x
  ~/bin/x-power-menu.sh

# reload sxhkd configuration
super + Escape
  pkill -USR1 -x sxhkd

# media keys
super + F11
  playerctl play-pause

super + F10
  playerctl next

super + F9
  playerctl previous

# media keys
XF86AudioPlay
  playerctl play-pause

XF86AudioNext
  playerctl next

XF86AudioPrev
  playerctl previous

# volume keys
XF86AudioRaiseVolume
  pactl set-sink-volume 0 +5%

XF86AudioLowerVolume
  pactl set-sink-volume 0 -5%

XF86AudioMute
  pactl set-sink-mute 0 toggle

# Screen brightness controls
XF86MonBrightnessUp
	xbacklight -inc 10 && notify-send 'brightness up' || notify-send 'trouble invoking xbacklight'

XF86MonBrightnessDown
	xbacklight -dec 10 && notify-send 'brightness down' || notify-send 'trouble invoking xbacklight'

# WM

#
# berry hotkeys
#

super + {h, j, k, l}
    berryc window_move {-50 0, 0 50, 0 -50, 50 0}

super + shift +  {h, j, k, l}
    berryc window_resize {-50 0, 0 50, 0 -50, 50 0}

super + {1-9}
    berryc switch_workspace {0-9}

super + shift + {1-9}
    berryc send_to_workspace {0-9}

super + m
    berryc window_monocle

super + f
    berryc fullscreen

super +  p
    berryc snap_right

super + o
    berryc snap_left

super + n
    berryc toggle_decorations

super + Tab
    berryc cycle_focus

super + q
    berryc window_close

super + c
    berryc window_center

~button1
    berryc pointer_focus
